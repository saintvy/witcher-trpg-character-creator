{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["es2022"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "types": ["node"]
  },
  "include": ["bin", "lib"]
}
